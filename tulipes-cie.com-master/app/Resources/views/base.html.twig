<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{% endblock %}</title>

        {% block meta %}
            <meta charset="UTF-8" />
            <meta name="viewport" content="initial-scale=1.0001, minimum-scale=1.0001, maximum-scale=1.0001, user-scalable=no">
        {% endblock %}

        {% block meta_social %}
            <meta name="twitter:card"       content="summary_large_image" />
            <meta name="twitter:site"       content="@TulipesCie" />
            <meta name="twitter:creator"    content="@TulipesCie" />

            <meta property="og:url"         content="{{ url('homepage') }}" />
            <meta property="og:type"        content="article" />
            <meta property="og:title"       content="Tulipes & Cie" />
            <meta property="og:description" content="{{ getSiteDescription(app.request.locale) }}" />
            <meta property="og:image"       content="{{ absolute_url(asset('bundles/app/img/tulipes.jpg')) }}" />
        {% endblock %}

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/index.css') }}">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="{% block bodyClass %}{% endblock %}">

        {% block body %}{% endblock %}

        {% if (app.request.cookies.has('accept_cookies') == false) %}
            {% include 'cookies-disclaimer.html.twig' %}
        {% endif %}

        {% block javascripts %}
            <script src="{{ asset('assets/js/app.js') }}"></script>

            <script type="text/javascript">
              (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
              })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
              ga('create', 'UA-24381743-1', 'auto');
              ga('send', 'pageview');
            </script>
        {% endblock %}
    </body>
</html>
